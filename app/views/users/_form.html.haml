
= form_for @user do |f|

  .form_row
    = f.label :name, "Nombre"
    = f.text_field :name

  .form_row
    = f.label :email, "Email"
    = f.text_field :email

  .form_row
    = f.label :permission, "Permission"
    = f.select :permission, User.permission_get

  .form_row
    = f.label :phone, "Phone"
    = f.text_field :phone

  .form_row
    = f.label :password
    = f.password_field :password
  
  .form_row
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  .form_row
    = f.submit
